---
import type { SEOData } from '../types';
import '../styles/global.css';
import '../styles/components.css';

interface Props {
  seo: SEOData;
}

const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-E9YTL5MJ4M"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-E9YTL5MJ4M');
</script>

  <!-- Google Tag Manager -->
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-PPDSGJ8M');</script>
  <!-- End Google Tag Manager -->
  
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{seo.title}</title>
  <meta name="description" content={seo.description}>
  <meta name="keywords" content={seo.keywords}>
  <meta name="author" content="BSW Navigator">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={seo.canonical}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={seo.ogType || 'website'}>
  <meta property="og:url" content={seo.canonical}>
  <meta property="og:title" content={seo.ogTitle || seo.title}>
  <meta property="og:description" content={seo.ogDescription || seo.description}>
  <meta property="og:site_name" content="BSW Navigator">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={seo.canonical}>
  <meta property="twitter:title" content={seo.twitterTitle || seo.title}>
  <meta property="twitter:description" content={seo.twitterDescription || seo.description}>
  
  <!-- Additional SEO -->
  <meta name="theme-color" content="#047857">
  <meta name="msapplication-TileColor" content="#047857">
  <meta name="application-name" content="BSW Navigator">
  <meta name="apple-mobile-web-app-title" content="BSW Navigator">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="alternate icon" href="/favicon.svg">
  
  <!-- External Dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  

</head>
<body class="bg-stone-50 text-stone-800">
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PPDSGJ8M"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  
  <slot />
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "BSW Navigator",
    "url": "https://bswdegree.org/",
    "description": "Interactive guide to the Bachelor of Social Work (BSW) degree, career paths, salary expectations, and program requirements.",
    "publisher": {
      "@type": "Organization",
      "name": "BSW Navigator"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://bswdegree.org/?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>
  
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "Complete Guide to Bachelor of Social Work (BSW) Degree",
    "description": "Comprehensive guide to Bachelor of Social Work education, career paths, salary expectations, and program requirements",
    "author": {
      "@type": "Organization",
      "name": "BSW Navigator"
    },
    "publisher": {
      "@type": "Organization",
      "name": "BSW Navigator"
    },
    "datePublished": "2025-07-10",
    "dateModified": "2025-07-10",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "https://bswdegree.org/"
    },
    "about": {
      "@type": "EducationalOccupationalCredential",
      "name": "Bachelor of Social Work",
      "description": "Professional degree preparing students for entry-level social work practice",
      "credentialCategory": "Bachelor's Degree",
      "educationalLevel": "Undergraduate",
      "occupationType": {
        "@type": "Occupation",
        "name": "Social Worker",
        "occupationLocation": {
          "@type": "Country",
          "name": "United States"
        },
        "estimatedSalary": {
          "@type": "MonetaryAmountDistribution",
          "name": "Social Worker Salary",
          "currency": "USD",
          "median": 61330
        }
      }
    }
  }
  </script>
</body>
</html>